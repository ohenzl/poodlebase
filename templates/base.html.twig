<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
          {% block title %}Welcome!{% endblock %}
        </title>
        {% block stylesheets %}

          {{ encore_entry_link_tags('app') }}

          {% if app.request.cookies.get('mode') == 'dark' %}
            <link id="darkCss" rel="stylesheet" type="text/css" href="../../build/app_dark.css" media="all">
          {% endif %}

        {% endblock %}
    </head>
    <body>
      <header>
        <div id='logo'>
          <a href='{{ path('index') }}'>Poodlebase</a>
        </div>
        <input id='hamburger' type='checkbox' class='hamburger' unchecked>
        <label id='label_hamburger' for='hamburger'><span id='inner_hamburger'></span></label>
        <nav>
          <div class='navlink'>
            <a href='{{ path('database') }}'>databáze</a>
          </div>
          <div class='navlink'>
            <a href='{{ path('database') }}'>chovné stanice</a>
          </div>
          <div class='navlink'>
            <a href='{{ path('database') }}'>aktuální vrhy</a>
          </div>
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
          <div class='navlink'>
            <a href='{{ path('admin') }}'>admin</a>
          </div>
          <div class='navlink' style='margin-right:20px;'>
            <a href='{{ path('app_logout') }}'>logout</a>
          </div>
          <!-- <div style='flex-basis:100px;'> -->
            <!-- {{app.user.username}} -->
          <!-- </div> -->
        {% else %}
          <div class='navlink' style='margin-right:20px;'>
            <a href='{{ path('app_login') }}'>login</a>
          </div>
        {% endif %}
        <!-- mode dark/light -->
        </nav>
        <div id='mode-button' class="mode-outer">
          <div class="mode-inner">

          </div>
        </div>
      </header>
      {{ dump(app.request.cookies) }}
      {{ dump(app.request.cookies.get('mode')) }}

        {% block body %}{% endblock %}

        {% block javascripts %}
          {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </body>
</html>
