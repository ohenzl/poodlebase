        <div>
          <a href='../../login'>login</a>
        </div>
      {% endif %}
      </nav>

        {% block body %}{% endblock %}
        {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
