<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
          {% block title %}Welcome!{% endblock %}
        </title>
        {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>

      <nav>
        <div>
          <a href='../../database'>databáze</a>
        </div>
        <div>
          <a href='../../chs'>chovné stanice</a>
        </div>
        <div>
          <a href='../../chs'>aktuální vrhy</a>
        </div>
      {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
