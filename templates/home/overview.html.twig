    <th>
      Majitel
    </th>
  </tr>

  {% for pes in psi %}
    <tr>
      <td>
        <a href="../../pes/{{pes.ID}}/{{pes.pes_jmeno|replace({' ': '-'})}}-{{pes.stanice|replace({' ': '-'})}}">
        {{pes.pes_jmeno}}
      </td>
      <td>
        {{pes.stanice}}
      </td>
      <td>
        {{pes.barva}}
      </td>
      <td>
        {{pes.pohlavi}}
      </td>
      <td>
        {% if pes.narozeni != '0000-00-00' %}
          {{pes.narozeni|date("d.m.Y")}}
        {% else %}
          neudáno
        {% endif %}
      </td>
      <td>
        {{pes.matka_jmeno}} {{pes.matka_stanice}}
      </td>
      <td>
        {{pes.otec_jmeno}} {{pes.otec_stanice}}
      </td>
      <td>
        {{pes.chovatel_jmeno}}
      </td>
      <td>
        {{pes.majitel}}
      </td>
    </tr>
  {% endfor %}


</table>
