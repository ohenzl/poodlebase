{% extends 'base.html.twig' %}

{% block title %}{{dog.jmeno}}{% endblock %}

{% block stylesheets %}
  {{ encore_entry_link_tags('overview') }}
  {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}

{# {{dump(dog)}} #}

{% set gens = 4 %}
{% set rows = 2 ** gens %}

<h1>{{dog.getJmeno}}</h1>

<table id='info'>
  <tr>
    <td>
      Pohlaví
    </td>
    <td>
      {{dog.getSex}}
    </td>
  </tr>
  <tr>
    <td>
      Datum narození
    </td>
    <td>
      {{dog.getBirthday|date("d.m.Y")}}
    </td>
  </tr>
  <tr>
    <td>
      Barva
    </td>
    <td>
      {{dog.getColor}}
    </td>
  </tr>
  <tr>
    <td>
      Srst
    </td>
    <td>
      {{dog.getHair}}
    </td>
  </tr>
</table>

<br>

<table id='pedigree'>

{% for g in 0 .. (rows)-1 %}
  <tr>
    {% for i in 1 .. gens %}


      {% if g % (rows/dogs[i]|length) == 0 %}
        <td rowspan='{{rows/dogs[i]|length}}'>
          {{dogs[i][(g/(rows/dogs[i]|length))].printInfo | raw }}
        </td>
      {% endif %}

    {% endfor %}
  </tr>
{% endfor %}




</table>
{{dump(dogs)}}

{% endblock %}


{% block javascripts %}
  {{ encore_entry_script_tags('overview') }}
{% endblock %}
